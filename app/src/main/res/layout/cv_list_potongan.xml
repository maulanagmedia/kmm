<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:weightSum="1"
        android:layout_marginLeft="@dimen/default_padding_all"
        android:layout_marginRight="@dimen/default_padding_all"
        android:layout_marginTop="@dimen/default_small_padding"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13sp"
            android:id="@+id/tv_title"
            android:scrollHorizontally="false"
            android:ellipsize="none"
            android:textColor="@color/profile_title_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:gravity="right"
            android:textColor="@color/default_text_color"
            android:id="@+id/tv_value"
            android:layout_marginBottom="@dimen/default_small_padding"
            android:ellipsize="none"/>
    </LinearLayout>

</LinearLayout>