<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gmedia.net.id.kopkarmitramakmur.NavPengajuanPinjaman.MainPengajuanPinjaman">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_shape_black_transparent"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/ll_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:gravity="center"
                android:text="Pengajuan Pinjaman"
                android:textAllCaps="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/title_act_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:alpha="0.8"
                android:background="@color/color_white"></LinearLayout>

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:gravity="center"
                android:text="Kopkar Mitra Makmur"
                android:textColor="@color/color_white"
                android:textSize="@dimen/subtitle_act_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/ll_title_container"
            android:orientation="vertical"
            android:weightSum="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.85"
                android:background="@color/color_white_grey"
                android:scrollbarSize="1dp">

                <LinearLayout
                    android:id="@+id/ll_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <!--Jumlah-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_earn" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="none"
                                android:scrollHorizontally="false"
                                android:text="Jumlah Pinjaman"
                                android:textColor="@color/color_grey"
                                android:textSize="@dimen/title_cv_size"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edt_jumlah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_top_list"
                                android:textStyle="bold"
                                android:textSize="@dimen/subtitle_cv_size2"
                                android:textColor="@color/color_grey_cold"
                                android:ellipsize="none"
                                android:inputType="number"
                                android:scrollHorizontally="false" />

                        </LinearLayout>
                    </LinearLayout>

                    <!--Jumlah-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_timetable" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="none"
                                android:scrollHorizontally="false"
                                android:text="Lama Angsuran (Bulan)"
                                android:textColor="@color/color_grey"
                                android:textSize="@dimen/title_cv_size"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edt_lama_angsuran"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_top_list"
                                android:textStyle="bold"
                                android:textSize="@dimen/subtitle_cv_size2"
                                android:ellipsize="none"
                                android:inputType="number"
                                android:textColor="@color/color_grey_cold"
                                android:scrollHorizontally="false" />

                        </LinearLayout>
                    </LinearLayout>

                    <!--Jumlah-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_payment" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="none"
                                android:scrollHorizontally="false"
                                android:text="Jumlah Angsuran (Rp)"
                                android:textColor="@color/color_grey"
                                android:textSize="@dimen/title_cv_size"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edt_jumlah_angsuran"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_top_list"
                                android:textStyle="bold"
                                android:textSize="@dimen/subtitle_cv_size2"
                                android:ellipsize="none"
                                android:inputType="none"
                                android:editable="false"
                                android:textColor="@color/color_grey_cold"
                                android:scrollHorizontally="false" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/gap_item_height"
                        android:layout_marginBottom="@dimen/margin_top_item"
                        android:layout_marginLeft="@dimen/margin_left_item"
                        android:layout_marginRight="@dimen/margin_left_item"
                        android:layout_marginTop="@dimen/margin_top_item"
                        android:background="@color/color_grey_cold"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.07">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/default_padding_all"
                                android:text="Tanda Tangan"
                                android:textSize="@dimen/title_cv_size"
                                android:textColor="@color/color_grey"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.15"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:visibility="gone"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="@dimen/default_button_min_height"
                                    android:paddingTop="@dimen/default_small_padding"
                                    android:paddingBottom="@dimen/default_small_padding"
                                    android:paddingRight="@dimen/default_padding_all"
                                    android:paddingLeft="@dimen/default_padding_all"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:id="@+id/ll_load_image"
                                    android:background="@drawable/btn_add_cart">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@mipmap/ic_gallery"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="@color/color_white"
                                        android:text="Muat dari gallery"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="@dimen/default_button_min_height"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/default_small_padding"
                                    android:paddingBottom="@dimen/default_small_padding"
                                    android:paddingRight="@dimen/default_padding_all"
                                    android:paddingLeft="@dimen/default_padding_all"
                                    android:orientation="horizontal"
                                    android:id="@+id/ll_draw"
                                    android:background="@drawable/btn_add_cart">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="@dimen/default_padding_all"
                                        android:src="@mipmap/ic_edit"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="@color/color_white"
                                        android:text="Gambar Tanda Tangan"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.78">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:id="@+id/iv_signature"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/gap_item_height"
                        android:background="@color/color_grey_cold"
                        android:layout_marginTop="@dimen/margin_top_item"
                        android:layout_marginBottom="@dimen/margin_top_item"
                        android:layout_marginRight="@dimen/margin_left_item"
                        android:layout_marginLeft="@dimen/margin_left_item"
                        android:orientation="horizontal"></LinearLayout>
                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_daftar_pinjaman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:minHeight="@dimen/default_button_min_height"
                        android:gravity="center"
                        android:background="@drawable/btn_cancel"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/default_padding_all"
                            android:text="Daftar Pinjaman"
                            android:textColor="@color/color_white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_simpan_pinjaman"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:layout_marginRight="@dimen/activity_vertical_margin"
                        android:minHeight="@dimen/default_button_min_height"
                        android:gravity="center"
                        android:background="@drawable/btn_add_cart"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/default_padding_all"
                            android:text="Simpan Pinjaman"
                            android:textColor="@color/color_white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
