<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:clipToPadding="false"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/cv_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/default_padding_all"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="50dp"
                            android:drawableRight="@mipmap/ic_datepicker"
                            android:hint="Dari"
                            android:id="@+id/edt_from"
                            android:editable="false"
                            android:inputType="none"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_to"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="50dp"
                            android:drawableRight="@mipmap/ic_datepicker"
                            android:editable="false"
                            android:hint="Sampai"
                            android:inputType="none" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/default_padding_all"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/default_padding_all"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_cancel"
                    android:gravity="center"
                    android:paddingTop="@dimen/default_padding_all"
                    android:paddingBottom="@dimen/default_padding_all"
                    android:layout_marginRight="@dimen/default_padding_all"
                    android:id="@+id/ll_cancel"
                    android:paddingRight="@dimen/default_padding_all"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginLeft="@dimen/default_padding_all"
                        android:src="@mipmap/ic_cancel"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Batal"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textSize="9sp"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/default_padding_all"
                    android:paddingBottom="@dimen/default_padding_all"
                    android:background="@drawable/btn_add_cart"
                    android:gravity="center"
                    android:id="@+id/ll_download"
                    android:paddingRight="@dimen/default_padding_all"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginLeft="@dimen/default_padding_all"
                        android:src="@mipmap/ic_download"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_download"
                        android:text="Download"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:textSize="9sp"
                        android:textAllCaps="true"
                        android:textColor="@color/color_white"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>